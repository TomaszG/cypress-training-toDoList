{
  "root": true,
  "extends": [
    "brainhub"
  ],
  "env": {
    "node": true
  },
  "settings": {
    "import/resolve": {
      "moduleDirectory": [
        "node_modules"
      ]
    }
  },
  "rules": {
    "camelcase": "warn",
    "comma-dangle": [
      2,
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "never"
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ]
  }
}
