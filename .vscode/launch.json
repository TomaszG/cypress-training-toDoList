  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm start",
      "name": "Start API",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/api"
    },
    {
      "command": "npm start",
      "name": "Start UI",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/ui"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/ui"
    }
  ],
  "compounds": [
    {
      "name": "Server/Client",
      "configurations": [
        "Start API",
        "Start UI",
        "Launch Chrome"
      ],
      // "preLaunchTask": "${defaultBuildTask}"
    }
  ]
}